---
import Menu from '../Menu.astro';
import Navigation from '../Navigation.astro';
import ThemeIcon from '../ThemeIcon.astro';

---
<header class="sticky top-0 z-[100] bg-white/60 backdrop-blur-[12px] shadow-sm py-4">
  <div class="max-w-[70rem] mx-auto px-8 flex justify-between items-center">
    <a href="/" class="site-title text-[1.6rem] font-medium no-underline bg-gradient-to-br from-[#667eea] to-[#764ba2] bg-clip-text text-transparent transition-all duration-300 ease-in-out -tracking-[0.02em] relative hover:scale-105 hover:brightness-125">缪培康</a>
    <div class="flex items-center gap-8 md:gap-8 max-md:gap-4">
      <Navigation />
      <div class="flex items-center gap-4">
        <ThemeIcon />
        <Menu />
      </div>
    </div>
  </div>
</header>

<style>
@font-face {
  font-family: 'ZCOOL KuaiLe';
  src: url('/src/assets/ZCOOLKuaiLe-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

.site-title {
  font-family: 'ZCOOL KuaiLe', cursive;
}
</style>
---
import Social from "./Social.astro";
---

<footer class="footer-wrapper">
  <div class="wave-decoration">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" fill="#bae6fd"></path>
    </svg>
  </div>
  <div class="footer-content">
    <div class="footer-container">
      <div class="footer-social">
        <Social platform="twitter" username="barneyroos" />
        <Social platform="github" username="barneyroos" />
        <Social platform="youtube" username="barneyroos" />
      </div>
      <p class="footer-text">© 2026 缪培康的全栈之旅</p>
    </div>
  </div>
</footer>

<style>
  .footer-wrapper {
    margin-top: 4rem;
    position: relative;
  }
  
  .wave-decoration {
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }
  
  .wave-decoration svg {
    width: 100%;
    height: 60px;
    display: block;
  }
  
  .footer-content {
    background: linear-gradient(180deg, #bae6fd 0%, #7dd3fc 100%);
    padding: 2rem 0 3rem;
  }
  
  .footer-container {
    max-width: 70rem;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }
  
  .footer-social {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-bottom: 1.5rem;
  }
  
  .footer-text {
    color: #0c4a6e;
    font-size: 0.9rem;
    margin: 0;
  }
</style>
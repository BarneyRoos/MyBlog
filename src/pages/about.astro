---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfileHeader from '../components/about/ProfileHeader.astro';
import ProfessionalSummary from '../components/about/ProfessionalSummary.astro';
import SkillsList from '../components/about/SkillsList.astro';
import ProjectList from '../components/about/ProjectList.astro';
import WorkExperienceTimeline from '../components/about/WorkExperienceTimeline.astro';
import CallToAction from '../components/about/CallToAction.astro';
import { profile, skills, projects, workExperience } from '../lib/about/data';

const pageTitle = `关于`;
---

<BaseLayout pageTitle={pageTitle}>
  <div class="space-y-12 mt-6">
    <!-- 个人头部信息 -->
    <ProfileHeader profile={profile} />

    <!-- 职业概述 -->
    <ProfessionalSummary experience={profile.experience} />

    <!-- 技能清单 -->
    <SkillsList skills={skills} />

    <!-- 代表项目 -->
    <ProjectList projects={projects} />

    <!-- 工作经历 -->
    <WorkExperienceTimeline workExperience={workExperience} />

    <!-- 底部CTA -->
    <CallToAction email={profile.email} phone={profile.phone} />
  </div>
</BaseLayout>
